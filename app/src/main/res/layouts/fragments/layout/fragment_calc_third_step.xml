<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tomek.cukrzyca.Fragments.Calculator.CalcThirdStepFragment"
    android:paddingStart="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingEnd="20dp">

    <!-- TODO: Update blank fragment layout -->

    <tomek.cukrzyca.NiceTextView
        android:text="Podaj ilość węglowodanów, którą możesz spożyć na 1 jednostkę insuliny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView116"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18dp"
        android:layout_above="@+id/textView121"
        android:layout_marginBottom="22dp"
        android:layout_alignLeft="@+id/textView124"
        android:layout_alignStart="@+id/textView124"
        android:layout_alignRight="@+id/textView125"
        android:layout_alignEnd="@+id/textView125" />

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/scrollCalcThird"
        android:layout_below="@+id/textView121"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout16" />
    </ScrollView>

    <tomek.cukrzyca.NiceTextView
        android:text="CZAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView117"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18dp"
        android:layout_marginTop="196dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/scrollCalcThird"
        android:layout_alignStart="@+id/scrollCalcThird" />

    <Button
        android:text="Wróć"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView114"
        android:layout_alignStart="@+id/textView114"
        android:layout_marginBottom="53dp"
        android:id="@+id/button24"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="18sp"/>

    <Button
        android:text="DALEJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button26"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/button24"
        android:layout_alignBottom="@+id/button24"
        android:layout_alignRight="@+id/scrollCalcThird"
        android:layout_alignEnd="@+id/scrollCalcThird"
        android:textSize="18sp"/>

    <tomek.cukrzyca.NiceTextView
        android:text="Krok 3 z 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/niceTextView16"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <tomek.cukrzyca.NiceTextView
        android:text="gram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView121"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/textView117"
        android:layout_alignBottom="@+id/textView117"
        android:layout_alignRight="@+id/scrollCalcThird"
        android:layout_alignEnd="@+id/scrollCalcThird" />

    <tomek.cukrzyca.NiceTextView
        android:text="WSKAŹNIK INSULINA/WW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView114"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="22dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/textView116"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button25"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/button24"
        android:layout_alignBottom="@+id/button24"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>


</RelativeLayout>
